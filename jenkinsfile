pipeline {
    agent any
    tools{
        maven 'maven'
    }
    stages {
        stage('build'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('test'){
            steps{
                sh 'mvn test'
            }
        }

        stage('Run JAR'){
            steps{
                script{
                    def output = sh(script: 'java -jar target/simple-java-project-1.0-SNAPSHOT.jar', returnStdout: true)
                    echo "Output from JAR: ${output}"
                }
            }
        }
    }
}
